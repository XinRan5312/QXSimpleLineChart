<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="horizontal">


    <RelativeLayout style="@style/new_user_loan_syle">

        <TextView
            android:id="@+id/home_recommand_earn_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="7.0%"
            android:textColor="#F3091C"
            android:textSize="24sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/home_recommand_invest_left"
            style="@style/home_recommand_text_syle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recommand_earn_day"
            android:gravity="center"
            android:text="剩余 165.5万元" />
    </RelativeLayout>

    <RelativeLayout style="@style/new_user_loan_syle">

        <LinearLayout
            android:id="@+id/home_recommand_days_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="27dp">

        <TextView
            android:id="@+id/home_recommand_invest_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="180天"
            android:textColor="#666666"
            android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用红包"
                android:textSize="10sp"
                android:textColor="#F3091C"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/home_recommand_invest_allow"
            style="@style/home_recommand_text_syle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recommand_days_container"
            android:gravity="left"
            android:text="5000元起投" />
    </RelativeLayout>

    <RelativeLayout style="@style/new_user_loan_syle">

        <com.ran.qxlinechart.QXCicleLineView
            android:id="@+id/home_recommand_invested_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

</LinearLayout>